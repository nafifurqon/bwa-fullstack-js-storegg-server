<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ../../partials/header.ejs %>
</head>

<body class="hold-transition sidebar-mini layout-fixed">
  <div class="wrapper">
    <!-- Navbar -->
    <%- include ../../partials/navbar.ejs %>
      <!-- /.navbar -->

      <!-- Main Sidebar Container -->
      <%- include ../../partials/sidebar.ejs %>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
          <!-- Content Header (Page header) -->
          <section class="content-header">
            <div class="container-fluid">
              <div class="row mb-2">
                <div class="col-sm-6">
                  <h1>Payment</h1>
                </div>
                <div class="col-sm-6">
                  <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/payment">Payment</a></li>
                    <li class="breadcrumb-item active">Ubah</li>
                  </ol>
                </div>
              </div>
            </div>
            <!-- /.container-fluid -->
          </section>

          <!-- Main content -->
          <section class="content">
            <div class="container-fluid">
              <div class="row">
                <div class="col-12">
                  <div class="card">
                    <div class="card card-primary">
                      <div class="card-header">
                        <h3 class="card-title">Form ubah payment "<%= payment.type %>"</h3>
                      </div>
                      <!-- /.card-header -->
                      <!-- form start -->
                      <form action="/payment/edit/<%= payment._id %>?_method=PUT" method="POST">
                        <div class="card-body">
                          <div class="form-group">
                            <label for="type">Tipe Pembayaran</label>
                            <input type="text" value="<%= payment.type %>" name="type" class="form-control" id="type" placeholder="Masukkan tipe pembayaran">
                          </div>
                          <div class="form-group">
                            <label>Bank</label>
                            <div class="select2-purple">
                              <select 
                                class="form-control select2"
                                multiple="multiple"
                                style="width: 100%;"
                                name="banks"
                                data-placeholder="Pilih bank"
                                required
                              >
                                <% banks?.forEach((bank) => { %>
                                  <option
                                    value="<%= bank._id %>"
                                    <% payment?.banks?.forEach((paymentBank) => { %>
                                      <% if (bank._id.toString() === paymentBank?._id.toString()){ %>
                                        selected
                                      <% } %>
                                    <% }) %>
                                  ><%= bank.name %> - <%= bank.bankName %> - <%= bank.accountNumber %></option>
                                <% }) %>
                              </select>
                            </div>
                          </div>
                        </div>

                        <div class="card-footer">
                          <button type="submit" class="btn btn-primary">Simpan</button>
                        </div>
                      </form>
                    </div>
                    <!-- /.card -->
                  </div>
                  <!-- /.col -->
                </div>
                <!-- /.row -->
              </div>
              <!-- /.container-fluid -->
          </section>
          <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <%- include ../../partials/footer.ejs %>
  </div>
  <!-- ./wrapper -->

  <%- include ../../partials/js.ejs %>
</body>

</html>